@{
    ViewData["Title"] = "Home Page";
}

@model IQueryable<Product>

<div class="text-center">
    <h1 class="display-4">Welcome to the Letrinia Website</h1>
</div>


    <div>
        <!--Here is the table of the products-->
        <table class="table-bordered table-layout: auto">
            <thead class="text-center">
                <tr><th>Book ID</th><th>Title</th><th>AuthorFirst</th><th>AuthorMiddle</th><th>AuthorLast</th><th>Publisher</th><th>ISBN</th><th>Classification</th><th>Category</th><th>Price</th></tr>

            </thead>
            <tbody class="table-striped text-center">
                @foreach (var x in Model)
                {
                    //This is the list of products outputted in a table
                <tr>
                    <td style="background-color:lightblue">@x.BookID</td>
                    <td>@x.Title</td>
                    <td>@x.AuthorFirst</td>
                    <td>@x.AuthorMiddle</td>
                    <td>@x.AuthorLast</td>
                    <td>@x.Publisher</td>
                    <td>@x.ISBN</td>
                    <td>@x.Classification</td>
                    <td>@x.Category</td>
                    <td>$@x.Price</td>

                </tr>
                }
            </tbody>

        </table>
    </div>
    <div asp-validation-summary="All"></div>





